[layout="row"]
  display: flex
  flex-direction: row

[layout="column"]
  display: flex
  flex-direction: column

@keyframes articleSlideUp
    from
      bottom: -51px
    to
      bottom: 0px



.menu
  background-color: #2e374b
  padding: 1em
  color: #fff
  justify-content: space-between
  .navigation
    .logo
      img
        +below(900px)
          display: none
        height: 2em
    .hamburger
      display: none
      +below(900px)
        display: block
    ul
      padding: 0px
      margin: 0px
      list-style-type: none
      align-items: center
      +below(900px)
        display: none
    li
      padding: 0 1em 0 1em
  .right
    align-self: center


h1.striped
  display: flex
  flex-direction: row
  align-items: baseline
  font-weight: 300
  font-size: 2em
  margin-top: 0px
  .stripes
    width: 100%
    height: 0.5em
    margin-left: 0.5em
    background-image: url(/images/stripes.png)

p
  font-size: 1.2em
  margin-top: 1em
  margin-bottom: 1em

.wrapper
  max-width: 900px
  margin: 0 auto


img.fill-vertical
  width: 100%
  max-width: 950px

header
  background-image: url(/images/blurbg.jpg)
  background-size: cover
  height: 80vh
  justify-content: center
  align-items: center
  .logo
    max-height: 100%
    width: 30%
    +below(900px)
      width: 60%
    +below(500px)
      width: 90%
    img
      width: 100%
  .slogan
    font-size: 3.5em
    color: #fff
    font-weight: 100
    text-shadow: 0px 0px 2px rgba(150, 150, 150, 0.86)
    +below(500px)
      font-size: 2em
article
  background-color: #fff
  padding: 25px



.preview
  max-width: 400px
  position: relative
  overflow: hidden
  cursor: pointer
  margin-top: 1em
  img
    border-radius: 5px
  &:hover
    .actions
      animation-name: articleSlideUp
      animation-duration: 0.4s
      animation: articleSlideUp 0.2s 1 alternate ease-out forwards
  h1
    font-size: 1.7em
    text-align: left
    top: 3.5em
    width: 100%
    text-align: center
    box-sizing: border-box
    color: #fff
    position: absolute
    font-weight: 400
    text-shadow: 1px 1px 0px rgba(0, 0, 0, 1)
    &:before
      content: '\00ab'
      font-weight: 500
    &:after
      content: '\00bb'
      font-weight: 500
  .actions
    position: absolute
    bottom: -51px
    left: 0px
    width: 100%
    box-sizing: border-box
    justify-content: space-between
    text-align: left
    background-color: #2e374b
    padding: 1em
    color: #fff
    border-radius: 0 0 5px 5px

    .social
      text-align: right

.media-wrapper
  justify-content: space-around
  flex-wrap: wrap
